<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POS-Mobile"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="狀態：待命"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/navSalesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="銷售" />

            <Button
                android:id="@+id/navInventoryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="盤點" />

            <Button
                android:id="@+id/navReportsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="報表" />

            <Button
                android:id="@+id/navHqButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="總店" />
        </LinearLayout>

        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="掃描商品二維碼"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/salesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/salesEditControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/salesEditProductIdInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="銷售商品ID"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/salesEditQtyInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="新數量"
                    android:inputType="number" />

                <Button
                    android:id="@+id/salesApplyEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套用" />

                <Button
                    android:id="@+id/salesRemoveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刪品" />
            </LinearLayout>

            <Button
                android:id="@+id/checkoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="送出訂單"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inventorySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inventoryQtyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="盤點實盤數"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/inventoryControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/inventoryQtyInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="盤點實盤數"
                    android:inputType="number"
                    android:text="1" />

                <Button
                    android:id="@+id/removeLastButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刪最後" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inventoryEditControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/inventoryEditProductIdInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="商品ID"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/inventoryEditQtyInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="新實盤數"
                    android:inputType="number" />

                <Button
                    android:id="@+id/inventoryApplyEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套用" />
            </LinearLayout>

            <Button
                android:id="@+id/inventoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="送出盤點"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查詢條件"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/storeIdInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="店別ID"
                    android:text="1"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/fromDateInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="起日 YYYY-MM-DD"
                    android:inputType="text"
                    android:text="2026-02-27" />

                <EditText
                    android:id="@+id/toDateInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="訖日 YYYY-MM-DD"
                    android:inputType="text"
                    android:text="2026-02-27" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/reportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="營業報表"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/storeRankingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分店營收排行"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/lowStockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低庫存明細"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/replenishButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="補貨建議"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hqSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/poIdInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="PO ID"
                    android:inputType="number" />

                <Button
                    android:id="@+id/poApproveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核准" />

                <Button
                    android:id="@+id/poOrderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下單" />
            </LinearLayout>

            <Button
                android:id="@+id/syncStatusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="總店同步監控"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/hqSummaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="總店營運總覽"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/createPoDraftButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一鍵產生採購單草稿"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/listPoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PO 草稿列表"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/poDetailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查詢 PO 明細（用 PO ID）"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明細："
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/cartText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="（尚無資料）"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
